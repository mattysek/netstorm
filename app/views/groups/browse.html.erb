<div id="groups_search"><span class="b1"></span>
  <h3><%= link_to 'Create new group', '/groups/new' %></h3>
  <h2>or</h2>
  <h3 id="groups_search_text">Search Groups</h3>
	<%= form_tag '/groups/', :method => 'get' do %>
		<%= text_field_tag :search %>
		<%= submit_tag "Search" %>
	<% end %>
</div>
<h2 style="margin:10px;">Your groups:</h2>
<div id="groups_list">
	<% @groups.select{|g| g.users.include? current_user}.each do |group| %>

		<% 
		if false
		group_url = ""
		if group.users.include? current_user
			group_url = '/groups/%s/' % group.id
		else
			group_url = '/groups/%s/join' % group.id
		end 
		end

		group_url = '/groups/%s/' % group.id
		%>

		<% if false %>
		<h4 class="tw_bullet">
		<%= link_to group.name, group_url %>
		</h4>
		<h5 id="group_topic">
			<%= group.topic %>
		</h5>
		<div class="cleaner"></div>
		<br/>
	<% end %>

		<div class="rp_box">
			<h4 class="tw_bullet">
				<%= link_to group.name, group_url %>
			</h4>
    	<h5 id="group_topic">
    		<%= group.topic %>
    	</h5>
      <!-- <div class="cleaner"></div> -->
  	</div>



		<% if false %>
			<h5>
			<% unless group.users.include? current_user %>
				<%= link_to 'join', '/groups/%s/join' % group.id %>
			<% end %>
			</h5>
		<% end %>

	<% end %>
	<br/>
</div>
